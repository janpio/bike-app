// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider = "postgresql"
  // NOTE: When using mysql or sqlserver, uncomment the @db.Text annotations in model Account below
  // Further reading:
  // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
  // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
  url      = env("DATABASE_URL")
}

model Stations {
  fid        Int        @default(autoincrement())
  id         Int        @id @default(autoincrement())
  nimi       String     @unique
  namn       String     @unique
  name       String     @unique
  osoite     String     @unique
  address    String     @unique
  kaupunki   String
  stad       String
  operator   String
  kapasiteet Int
  x          Float
  y          Float
  departure  Journeys[] @relation("departure")
  return     Journeys[] @relation("return")

  @@unique([id, nimi])
}

model Journeys {
  id                     String   @id @default(uuid())
  departure              DateTime
  return                 DateTime
  departure_station      Stations @relation("departure", fields: [departure_station_id, departure_station_name], references: [id, nimi])
  departure_station_id   Int
  departure_station_name String
  return_station         Stations @relation("return", fields: [return_station_id, return_station_name], references: [id, nimi])
  return_station_id      Int
  return_station_name    String
  covered_distance       Int
  duration               Int
}
